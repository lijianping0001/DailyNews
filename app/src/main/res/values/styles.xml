<resources>

    <!--Base Theme-->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!--no actionbar and title-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!--action bar color-->
        <item name="colorPrimary">@color/primary</item>
        <!--status bar color-->
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <!--window background-->
        <item name="android:windowBackground">@color/comment_bg</item>

        //沉浸状态栏
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>

    </style>

    <!-- Normal application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="actionBarStyle">@style/DNActionBarStyle</item>
        <item name="drawerArrowStyle">@style/AppTheme.DNDrawerArrowStyle</item>
        <!--actionbar text color-->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <!-- 设置标题栏样式 -->
    <style name="DNActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="AppTheme.DNDrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <!--是否开启导航图标的旋转效果-->
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- 标题栏文字样式 -->
    <style name="ActionBarTitleStyle" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/actionbar_title</item>
    </style>

    <style name="TextAppearance.ExpandedTitle"
        parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">26sp</item>
    </style>

</resources>
