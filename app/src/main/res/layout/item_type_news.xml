<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_white"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_type_news_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/actionbar_title"
        app:cardElevation="2dp"
        app:cardCornerRadius="2dp"
        app:contentPadding="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/iv_type_news_image"
                android:src="@drawable/image_news_default"
                android:scaleType="fitXY"
                android:transitionName="imageView"
                android:layout_width="75dp"
                android:layout_height="75dp" />

            <RelativeLayout
                android:layout_marginLeft="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <TextView
                    android:id="@+id/tv_type_news_title"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primary_text"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/tv_type_news_author"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:textSize="13sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_type_news_date"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@id/tv_type_news_author"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="13sp"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
